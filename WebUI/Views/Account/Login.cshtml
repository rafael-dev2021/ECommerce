@model LoginViewModel

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true"/>

<form asp-controller="Account" asp-action="Login" method="post" class="login-form">
    @Html.AntiForgeryToken()

    <h4>Log In</h4>
    <div class="mt-3 mb-3 text-center">
        <span style="font-size:15px;color:gray">Access your account with your email</span>
    </div>

    <div class="form-group">
        <input asp-for="Email" placeholder="Insert your email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="Password" placeholder="Insert your password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit">Log In</button>

    <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Register"
       style="height:35px;width:100%;border-radius:5px">
        Sign Up
    </a>
    <div class="form-group">
        <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">Remember-me</label>
        </div>
    </div>
    <div>
        <a asp-controller="Account" asp-action="ResetPassword">Forgot password?</a>
    </div>
    <div>
        <p>
            By signing up, you agree to our
            <a asp-controller="" asp-action="Privacy">Privacy Policy</a>
            and
            <a asp-controller="" asp-action="Term">Terms of Service</a>.
        </p>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}