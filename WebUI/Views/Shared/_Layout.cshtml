<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mega Shop</title>

    <!-- Meta Tags para SEO -->
    <meta name="description" content="Find the best products and deals at Mega Shop. Fashion, electronics, and much more for you!" />
    <meta name="keywords" content="fashion, electronics, deals, online shopping, Mega Shop" />

    <!-- Links para Estilos e Ícones -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Estruturação Semântica -->
    <link rel="canonical" href="https://github.com/rafael-dev2021" />

    <!-- Robôs e Indexação -->
    <meta name="robots" content="index, follow" />

    <!-- Open Graph para Redes Sociais -->
    <meta property="og:title" content="@ViewData["Title"] - Mega Shop" />
    <meta property="og:description" content="Check out our new collection of printed T-shirts, available in different styles and colors. Enjoy!" />
    <meta property="og:image" content="https://github.com/rafael-dev2021" />
    <meta property="og:url" content="https://github.com/rafael-dev2021" />
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo/logo.png" alt="Megashop">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse d-md-inline-flex justify-content-between">
                        <form class="d-flex flex-grow-1" asp-controller="Products" asp-action="Search" method="get" style="max-width: 400px;">
                            <input class="form-control me-2 bar" type="search" placeholder="Search for Products" aria-label="Search" name="search" value="@ViewData["search"]">
                        </form>

                        <div class="btn d-none d-md-block" style="margin-right:auto;border: 1px solid; color:lightgray">
                            <a asp-controller="" asp-action="">
                                <span>
                                    <i class="fa-solid fa-location-crosshairs" style="color:darkgray"></i>
                                </span>
                            </a>
                        </div>
                        <div class="d-none d-md-block">
                            <i class="fa-regular fa-heart"></i>
                            &nbsp;
                            <a asp-controller="ShoppingCart" asp-action="Index" style="text-decoration:none">
                                <i class="fa-solid fa-cart-shopping" style="color:black"></i>
                                @await Component.InvokeAsync("ShoppingCartMenu")
                            </a>
                            &nbsp;
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                    </div>
                </div>
            </nav>
            <nav id="myLinks" class="navbar navbar-expand-md navbar-toggleable-md navbar-light">
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    @await Component.InvokeAsync("CategoryMenu")
                    @* <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                    Admin
                    </a> *@
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">ProductsTest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-isBestSeller="true">Best sellers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-isDailyOffer="true">Daily Offers</a>
                        </li>
                        <li class="nav-item d-none d-sm-block" style="margin-left:auto">
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                        }

                        @if (Context.User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change password</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="EditProfile">Edit profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Smartphone" asp-action="Index">Index</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="border-bottom mt-2 mb-2"></div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark bg-cover">
        <div class="py-12 border-bottom">
            <div class="container container_layout">
                <div class="row">
                    <div class="col-12 col-md-3 mt-3">
                        <h4 class="mt-3 text-white">Mega shop</h4>
                        <ul class="list-unstyled list-inline mb-7 mb-md-0">
                            <li class="list-inline-item">
                                <a href="#!" class="text-gray-350">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#!" class="text-gray-350">
                                    <i class="fab fa-youtube"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#!" class="text-gray-350">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#!" class="text-gray-350">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#!" class="text-gray-350">
                                    <i class="fab fa-medium"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-6 col-sm mt-3">
                        <h6 class="heading-xxs mb-3 mt-3 text-white">
                            Account
                        </h6>
                        <ul class="list-unstyled mb-7 mb-sm-0">
                            <li>
                                <a a asp-controller="Account" asp-action="Login">Sign in</a>
                            </li>
                            <li>
                                <a a asp-controller="Account" asp-action="Register">Sign up</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-6 col-sm mt-3">
                        <h6 class="heading-xxs  mb-3 mt-3 text-white">
                            About Us
                        </h6>
                        <ul class="list-unstyled mb-7 mb-sm-0">
                            <li>
                                <a href="#">MegaShop</a>
                            </li>
                            <li>
                                <a href="#">Investor Relations</a>
                            </li>
                            <li>
                                <a href="#">Trends</a>
                            </li>
                            <li>
                                <a href="#">Sustainability</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-6 col-sm mt-3">
                        <h6 class="heading-xxs  mb-3 mt-3 text-white">
                            Company
                        </h6>
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a class="text-gray-300" href="./about.html">Our Story</a>
                            </li>
                            <li>
                                <a class="text-gray-300" href="#!">Careers</a>
                            </li>
                            <li>
                                <a class="text-gray-300" href="#!">Terms & Conditions</a>
                            </li>
                            <li>
                                <a class="text-gray-300" href="#!">Privacy & Cookie policy</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-6 col-sm mt-3">
                        <h6 class="heading-xxs  mb-3 mt-3 text-white">
                            Contact
                        </h6>
                        <ul class="list-unstyled mb-0">
                            <li>
                                <a asp-controller="Contact" asp-action="Contact">Contact</a>
                            </li>
                            <li>
                                <a href="#!">Track shipments</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="Privacy">FAQ</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-6">
            <div class="container  mt-3">
                <div class="row">
                    <div class="col mb-3">
                        <p class="mb-md-0 fs-xxs text-muted">
                            © 2023 All rights reserved. Designed by Unvab.
                            <a href="https://github.com/rafael-dev2021">
                                <span style="color:blueviolet;font-size:20px"><i class="bi bi-github"></i></span>
                            </a>
                        </p>
                    </div>
                    <div class="col-auto mb-3">
                        <img class="footer-payment" src="~/images/payments/mastercard (1).svg" alt="...">
                        <img class="footer-payment" src="~/images/payments/visa (1).svg" alt="...">
                        <img class="footer-payment" src="~/images/payments/amex.svg" alt="...">
                        <img class="footer-payment" src="~/images/payments/paypal (1).svg" alt="...">
                        <img class="footer-payment" src="~/images/payments/maestro.svg" alt="...">
                        <img class="footer-payment" src="~/images/payments/klarna.svg" alt="...">
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/GetProductsListPartial.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
