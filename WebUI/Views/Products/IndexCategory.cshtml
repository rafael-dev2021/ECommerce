@model ProductViewModel

@foreach (var item in Model.ProductsDto)
{
    if (item.Category?.Name == "Fashion")
    {
        @await Component.InvokeAsync("FashionMenu")
    }
    break;
}

@foreach (var item in Model.ProductsDto)
{
    if (item.Category?.Name == "Smartphones")
    {
        @await Component.InvokeAsync("SmartphonesMenu")
    }
    break;
}

@foreach (var item in Model.ProductsDto)
{
    if (item.Category?.Name == "Games")
    {
        @await Component.InvokeAsync("GamesMenu")
    }
    break;
}

@section Scripts {

    <!-- Owl-Carousel GamesMenu -->
    <script>
        $(document).ready(function () {
            $('.owl-carousel').owlCarousel({
                loop: true,
                nav: true,
                navText: ["<i class='fas fa-chevron-left'></i>", "<i class='fas fa-chevron-right'></i>"],
                responsive: {
                    0: {
                        items: 1,
                        nav: false
                    },
                    600: {
                        items: 3,
                        nav: false
                    },
                    1000: {
                        items: 4
                    }
                }
            });
        });
    </script>
}